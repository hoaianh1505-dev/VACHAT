<!DOCTYPE html>
<html>

<head>
    <title>Trang chủ - VAChat</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .layout {
            display: flex;
            gap: 0;
            min-height: 80vh;
        }

        .sidebar {
            width: 260px;
            background: #f6f9ff;
            border-right: 1px solid #e3eafc;
            padding: 0 0 0 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 18px 18px 10px 18px;
            border-bottom: 1px solid #e3eafc;
            background: #fff;
        }

        .search-box {
            padding: 14px 18px;
            border-bottom: 1px solid #e3eafc;
            background: #fff;
        }

        .search-box input {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #e3eafc;
            background: #f8fafc;
        }

        .sidebar-list {
            flex: 1;
            overflow-y: auto;
            padding: 10px 0;
        }

        .sidebar-section {
            margin-bottom: 18px;
        }

        .sidebar-section-title {
            font-size: 14px;
            color: #1976d2;
            font-weight: 600;
            margin: 0 0 8px 18px;
        }

        .sidebar-item {
            padding: 10px 18px;
            cursor: pointer;
            border-radius: 8px;
            margin: 2px 0;
            transition: background 0.2s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar-item:hover,
        .sidebar-item.active {
            background: #e3f0ff;
        }

        .main-chat {
            flex: 1;
            padding: 0;
            display: flex;
            flex-direction: column;
            background: #fff;
        }

        .main-header {
            padding: 18px;
            border-bottom: 1px solid #e3eafc;
            background: #f6f9ff;
            font-weight: 500;
            color: #1976d2;
            min-height: 56px;
        }

        .chat-content {
            flex: 1;
            padding: 18px;
            overflow-y: auto;
        }

        .chat-input-box {
            padding: 18px;
            border-top: 1px solid #e3eafc;
            background: #f6f9ff;
            display: flex;
            gap: 8px;
        }

        .chat-input {
            flex: 1;
        }

        @media (max-width: 900px) {
            .layout {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                border-right: none;
                border-bottom: 1px solid #e3eafc;
            }

            .main-chat {
                min-height: 400px;
            }
        }
    </style>
</head>

<body>
    <div class="header">
        <div style="display:flex;align-items:center;justify-content:space-between;">
            <span>VAChat</span>
            <div style="display:flex;align-items:center;">
                <% if (typeof user !=='undefined' && user.avatar) { %>
                    <img src="<%= user.avatar %>" alt="avatar"
                        style="width:32px;height:32px;border-radius:50%;margin-right:10px;">
                    <% } %>
                        <span id="username" style="font-weight:600;">
                            <%= typeof user !=='undefined' ? user.username : 'Khách' %>
                        </span>
                        <a href="/login" style="margin-left:18px;color:#fff;">Đăng xuất</a>
            </div>
        </div>
    </div>
    <div class="layout">
        <div class="sidebar">
            <div class="sidebar-header">
                <span style="font-weight:600;color:#1976d2;">Danh mục chat</span>
            </div>
            <div class="search-box">
                <input type="text" id="searchInput" placeholder="Tìm bạn bè qua username...">
            </div>
            <div class="sidebar-list">
                <div class="sidebar-section">
                    <div class="sidebar-section-title">Bạn bè</div>
                    <div id="friendList">
                        <% if (typeof friends !=='undefined' && friends.length> 0) { %>
                            <% friends.forEach(function(friend) { %>
                                <div class="sidebar-item" data-type="friend" data-id="<%= friend._id %>"
                                    style="display:flex;align-items:center;gap:10px;">
                                    <% if (friend.avatar) { %>
                                        <img src="<%= friend.avatar %>" alt="avatar"
                                            style="width:28px;height:28px;border-radius:50%;">
                                        <% } %>
                                            <span>
                                                <%= friend.username %>
                                            </span>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div style="padding:10px 18px;color:#888;">Chưa có bạn bè nào</div>
                                        <% } %>
                    </div>
                </div>
                <div class="sidebar-section">
                    <div class="sidebar-section-title">Nhóm chat</div>
                    <div id="groupList">
                        <% if (typeof groups !=='undefined' && groups.length> 0) { %>
                            <% groups.forEach(function(group) { %>
                                <div class="sidebar-item" data-type="group" data-id="<%= group._id %>">
                                    <%= group.name %>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div style="padding:10px 18px;color:#888;">Chưa có nhóm nào</div>
                                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-chat">
            <div class="main-header" id="chatHeader">
                Chọn bạn bè hoặc nhóm để bắt đầu chat
            </div>
            <div class="chat-content" id="chatContent">
                <!-- Nội dung chat sẽ hiển thị ở đây -->
            </div>
            <form class="chat-input-box" id="chatForm" style="display:none;">
                <input type="text" id="messageInput" class="chat-input" placeholder="Nhập tin nhắn..."
                    autocomplete="off" required />
                <button type="submit" class="chat-send btn">Gửi</button>
            </form>
        </div>
    </div>
    <script src="/js/home.js"></script>
    <script>
        // Demo: Chọn bạn bè/nhóm để hiển thị khối chat
        const friendList = document.getElementById('friendList');
        const groupList = document.getElementById('groupList');
        const chatHeader = document.getElementById('chatHeader');
        const chatContent = document.getElementById('chatContent');
        const chatForm = document.getElementById('chatForm');
        let currentChat = null;

        function selectChat(type, name) {
            chatHeader.textContent = type === 'friend' ? `Chat với ${name}` : `Nhóm: ${name}`;
            chatContent.innerHTML = '';
            chatForm.style.display = 'flex';
        }

        [...friendList.querySelectorAll('.sidebar-item'), ...groupList.querySelectorAll('.sidebar-item')].forEach(item => {
            item.addEventListener('click', function () {
                friendList.querySelectorAll('.sidebar-item').forEach(i => i.classList.remove('active'));
                groupList.querySelectorAll('.sidebar-item').forEach(i => i.classList.remove('active'));
                this.classList.add('active');
                selectChat(this.dataset.type, this.textContent);
            });
        });

        // Demo gửi tin nhắn
        chatForm.addEventListener('submit', function (e) {
            e.preventDefault();
            const msg = document.getElementById('messageInput').value.trim();
            if (msg) {
                const div = document.createElement('div');
                div.textContent = 'Bạn: ' + msg;
                chatContent.appendChild(div);
                document.getElementById('messageInput').value = '';
            }
        });

        // Demo tìm kiếm bạn bè
        document.getElementById('searchInput').addEventListener('input', function () {
            const val = this.value.toLowerCase();
            friendList.querySelectorAll('.sidebar-item').forEach(item => {
                item.style.display = item.textContent.toLowerCase().includes(val) ? '' : 'none';
            });
        });
    </script>
</body>

</html>