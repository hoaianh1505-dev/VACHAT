    <style>
        :root {
            --bg1: #04101a;
            --bg2: #071827;
            --accent: #4f8cff;
            --accent-2: #2563eb;
            --muted: #bcd4ff;
            --glass: rgba(255, 255, 255, 0.04);
        }

        /* base */
        * {
            box-sizing: border-box
        }

        html,
        body {
            height: 100%;
            margin: 0;
            font-family: Inter, 'Segoe UI', Roboto, Arial, sans-serif;
            background: linear-gradient(180deg, var(--bg1), var(--bg2));
            color: #eaf4ff;
            display: grid;
            place-items: center
        }

        /* decorative blobs (kept subtle) */
        .bg-deco {
            position: fixed;
            inset: 0;
            pointer-events: none;
            overflow: hidden;
            z-index: 0
        }

        .blob {
            position: absolute;
            border-radius: 50%;
            filter: blur(64px);
            opacity: .12;
            transform: translateZ(0)
        }

        .blob.a {
            width: 520px;
            height: 520px;
            left: -12%;
            top: -8%;
            background: linear-gradient(135deg, var(--accent), #7dd3fc)
        }

        .blob.b {
            width: 420px;
            height: 420px;
            right: -8%;
            bottom: -12%;
            background: linear-gradient(135deg, #7c3aed, #ffb86b)
        }

        /* panel */
        .panel {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 14px;
            padding: 34px;
            border-radius: 18px;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(0, 0, 0, 0.28));
            backdrop-filter: blur(6px);
            box-shadow: 0 30px 80px rgba(2, 6, 10, 0.6)
        }

        .title {
            font-size: clamp(1.6rem, 4.6vw, 2.6rem);
            margin: 0;
            font-weight: 800;
            color: #ffffff;
            text-align: center;
            letter-spacing: -0.02em
        }

        .subtitle {
            color: var(--muted);
            max-width: 70ch;
            text-align: center;
            margin: 0;
            font-size: 1rem
        }

        /* Improved CTA: layered visuals, subtle 3D, ring + shine */
        .cta-wrap {
            display: grid;
            place-items: center;
            position: relative
        }

        .cta {
            --size: 200px;
            width: var(--size);
            height: var(--size);
            border-radius: 50%;
            border: 0;
            cursor: pointer;
            position: relative;
            display: grid;
            place-items: center;
            background: linear-gradient(180deg, var(--accent), var(--accent-2));
            color: #041224;
            font-weight: 900;
            box-shadow:
                0 18px 48px rgba(37, 99, 235, 0.12),
                0 6px 18px rgba(2, 6, 10, 0.6),
                inset 0 -10px 32px rgba(0, 0, 0, 0.2);
            transform: translateZ(0);
            transition: transform .18s ease, box-shadow .18s ease, filter .18s ease;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: .9px;
        }

        /* subtle outer glow ring (pseudo-element) */
        .cta::before {
            content: "";
            position: absolute;
            inset: -10px;
            border-radius: 50%;
            background: radial-gradient(closest-side, rgba(79, 140, 255, 0.06), transparent 60%);
            filter: blur(8px);
            opacity: 0.9;
            transition: opacity .18s ease, transform .18s ease;
            transform: scale(1);
            pointer-events: none;
        }

        /* glossy streak */
        .cta::after {
            content: "";
            position: absolute;
            left: 10%;
            top: 6%;
            width: 80%;
            height: 46%;
            border-radius: 50%;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.26), rgba(255, 255, 255, 0.02));
            mix-blend-mode: overlay;
            filter: blur(6px);
            opacity: 0.95;
            pointer-events: none;
        }

        /* inner content */
        .cta .inner {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 6px;
            z-index: 2
        }

        .cta .emoji {
            font-size: 2rem;
            display: block;
            transform-origin: center;
            transition: transform .25s cubic-bezier(.2, .9, .28, 1)
        }

        .cta .label {
            font-size: 1rem;
            color: #041224
        }

        /* hover / active */
        .cta:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 40px 130px rgba(79, 140, 255, 0.18)
        }

        .cta:hover .emoji {
            transform: translateY(-4px) scale(1.08)
        }

        .cta:active {
            transform: translateY(-3px) scale(.995)
        }

        .cta:focus-visible {
            outline: 6px solid rgba(79, 140, 255, 0.12);
            outline-offset: 6px
        }

        /* animated sparkle (subtle) */
        .sparkle {
            position: absolute;
            right: 6%;
            top: 10%;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.85);
            filter: blur(6px);
            opacity: 0.06;
            transform: translateY(0) scale(1);
            animation: sparkleMove 3.2s linear infinite;
            pointer-events: none;
        }

        @keyframes sparkleMove {
            0% {
                opacity: .06;
                transform: translateY(0) scale(1)
            }

            50% {
                opacity: .16;
                transform: translateY(-6px) scale(1.2)
            }

            100% {
                opacity: .06;
                transform: translateY(0) scale(1)
            }
        }

        /* ring pulse when present */
        @keyframes ringPulse {
            0% {
                box-shadow: 0 12px 36px rgba(79, 140, 255, 0.06)
            }

            50% {
                box-shadow: 0 28px 78px rgba(79, 140, 255, 0.12);
                transform: translateY(-2px)
            }

            100% {
                box-shadow: 0 12px 36px rgba(79, 140, 255, 0.06)
            }
        }

        .cta.pulse {
            animation: ringPulse 3.2s ease-in-out infinite
        }

        .note {
            color: rgba(234, 244, 255, 0.82);
            font-size: .95rem
        }

        /* accessibility: respect reduced motion */
        @media (prefers-reduced-motion: reduce) {

            .cta,
            .cta.pulse,
            .sparkle {
                animation: none;
                transition: none
            }
        }

        /* responsive sizes */
        @media (max-width: 460px) {
            .cta {
                --size: 150px
            }

            .title {
                font-size: 1.4rem
            }
        }
    </style>
</head>

